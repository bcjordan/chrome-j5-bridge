{
  "name": "Code.org Test Serial Connector",
  "description": "Use Johnny-Five bridged via a Chrome application",
  "version": "0.1.0",
  "manifest_version": 2,
  "app": {
    "background": {
      "page": "background.html",
      "persistent": false
    }
  },
  "permissions": [
    "serial",
    "unlimitedStorage",
    "http://*/",
    "https://*/",
    "*://*/",
    "tts",
    "notifications",
    "storage",
    "videoCapture",
    "audioCapture"
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "480": "icon480.png"
  },
  "sockets": {
    "tcp": {
      "connect": "*:*"
    }
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3017/*"
    ]
  }
}
